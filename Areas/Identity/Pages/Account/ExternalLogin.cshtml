@page
@using Microsoft.AspNetCore.Mvc.ModelBinding
@model ExternalLoginModel


@{
    ViewData["Title"] = "Đăng ký Tài Khoản";
}

<h1>@ViewData["Title"]</h1>
<h2 id="external-login-title">Liên kết đã gửi tài khoản @Model.ProviderDisplayName .</h2>
<hr />

<p id="external-login-description" class="text-info">
    Bạn đã liên kết với <strong>@Model.ProviderDisplayName</strong>.
    Vui lòng nhấp vào đăng ký để xác nhận và kiểm tra hỏm thư Mail !
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        
           @Html.Partial("_ValidationErrors", ViewData.ModelState)
            @* <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div> *@
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder="Please enter your email."/>
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary mb-2">Đăng ký</button>
          
                <button class="w-100 btn btn-lg btn-primary mb-2" id="forgot-password" asp-page="./ForgotPassword">Quên Mật Khẩu?</button>
        
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
