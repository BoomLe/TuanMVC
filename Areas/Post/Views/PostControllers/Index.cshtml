@model IEnumerable<App.Areas.Post.Models.PostModel>

@{
    ViewData["Title"] = "Nội dung bài đăng";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Tạo bài viết</a>
</p>
<p>Tổng số bài viết : @ViewBag.totalPosts</p>
<table class="table">
    <thead>
        <tr>
            <th>STT</th>
       
            <th>
                @Html.DisplayNameFor(model => model.DateUpdated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            
        
        
            <th>
                @Html.DisplayNameFor(model => model.Published)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@(++ViewBag.pageIndex)</td>
            
    
            <td>
                @Html.DisplayFor(modelItem => item.DateUpdated)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="=@item.PostId">@Html.DisplayFor(modelItem => item.Title)</a>
                <br>
                @string.Join(", ", item.PostCategories.Select(p => p.Category.Title))
            </td>
            
         
         
         
            <td>
                @Html.DisplayFor(modelItem => item.Published)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PostId">Chỉnh sửa</a> |
                <a asp-action="Details" asp-route-id="@item.PostId">Xem</a> |
                <a asp-action="Delete" asp-route-id="@item.PostId">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
<partial name="_PagingXTL" model="@ViewBag.pagingModel"></partial>